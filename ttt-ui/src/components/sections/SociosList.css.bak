.socios-list-container {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
}

/**/

.socios-list-side-panel {
    border: 1px solid var(--background-main);
    background-color: var(--background-contrast);

    min-width: 300px;
   
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
}

.socios-list-container > .col {
    width: 100%;
    min-width: 300px;
}

/**/

.socios-list {
    width: 100%;
}

.socios-list tr, .socios-list tbody {
    height: 40px;
}

.socios-list tr:nth-child(even), 
.socios-list th
{
    background-color: var(--background-contrast);
}

.socios-list tr:hover {
    color: #fff;
    background-color: color-mix(in srgb, var(--background-contrast), white 5%);
    cursor: pointer;
}

.socios-list td:not(:first-child),
.socios-list th:not(:first-child)
 {
    padding: 10px;
    width: 30%;
}
.socios-list td:first-child {
    text-align: center;
}

.socios-list-side-panel .filter {
    border: 1px solid var(--primary-color);
    border-radius: 4px;

    padding: 0.25rem;

    font-weight: bold;
    font-size: 12px;

    width: fit-content;
}

.socios-list-side-panel .filter:hover {
    cursor: pointer;
    background-color: color-mix(in srgb, var(--primary-color), var(--background-main) 50%);
}

/**/

.filters {
    display: flex;
    flex-direction: column;
    gap: 1rem;

    width: 90%;
    padding-bottom: 2rem;

    font-weight: bold;
}

.barrios-filter div {
    margin-top: .25rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.25rem;
}

.pj-filter {
    display: flex;
    align-items: flex-end;
    gap: 1rem;
}

.filters input[type="checkbox"] {
    width: 20px;
    height: 20px;
}

/*
    Componentes hijos
*/

.socio-details {
    width: 200px !important;
    padding: 1rem;
    display: flex;
    flex-direction: column;
}

@media (max-width: 1000px) {
    .socios-list-container {
        flex-wrap: wrap;
    }
    .socios-list-side-panel {
        min-width: 350px !important;
        width: 100%;
        min-width: 0;
    }
    .socios-list-container > .col {
        min-width: 350px !important;
    }
}